{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "plugins": [
      "angular"
    ],
    "extends": [
      "eslint:recommended",
       "angular"
      ],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "off"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            "off"
        ],
        "no-extra-semi": [
            "off"
        ],
         "no-unused-vars": [
            "error",
            {"args": "none" }
        ]
    }
}